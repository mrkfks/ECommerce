@model List<Dashboard.Web.Services.BrandViewModel>
@{
    ViewData["Title"] = "Marka Yönetimi";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">
                <i class="bi bi-bookmark-star text-primary me-2"></i>Marka Yönetimi
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Ana Sayfa</a></li>
                    <li class="breadcrumb-item active">Markalar</li>
                </ol>
            </nav>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i>Yeni Marka
        </a>
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 bg-primary bg-opacity-10 p-3 rounded">
                            <i class="bi bi-bookmark-star text-primary fs-4"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Toplam Marka</h6>
                            <h3 class="mb-0">@Model.Count</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 bg-success bg-opacity-10 p-3 rounded">
                            <i class="bi bi-check-circle text-success fs-4"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Aktif</h6>
                            <h3 class="mb-0">@Model.Count(b => b.IsActive)</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 bg-warning bg-opacity-10 p-3 rounded">
                            <i class="bi bi-pause-circle text-warning fs-4"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Pasif</h6>
                            <h3 class="mb-0">@Model.Count(b => !b.IsActive)</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 bg-info bg-opacity-10 p-3 rounded">
                            <i class="bi bi-box text-info fs-4"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Toplam Ürün</h6>
                            <h3 class="mb-0">@Model.Sum(b => b.ProductCount)</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Brands Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">Marka Listesi</h5>
            <div class="input-group" style="max-width: 300px;">
                <span class="input-group-text bg-transparent border-end-0">
                    <i class="bi bi-search"></i>
                </span>
                <input type="text" class="form-control border-start-0" id="searchInput" placeholder="Marka ara...">
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0" id="brandsTable">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 60px;">Logo</th>
                                <th>Marka Adı</th>
                                <th>Açıklama</th>
                                <th class="text-center">Ürün Sayısı</th>
                                <th class="text-center">Durum</th>
                                <th style="width: 150px;">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var brand in Model)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(brand.LogoUrl))
                                        {
                                            <img src="@brand.LogoUrl" alt="@brand.Name" class="rounded" style="width: 40px; height: 40px; object-fit: contain;">
                                        }
                                        else
                                        {
                                            <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                <i class="bi bi-image text-muted"></i>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <strong>@brand.Name</strong>
                                        @if (!string.IsNullOrEmpty(brand.CompanyName))
                                        {
                                            <br><small class="text-muted">@brand.CompanyName</small>
                                        }
                                    </td>
                                    <td>
                                        <span class="text-muted">@(brand.Description?.Length > 50 ? brand.Description.Substring(0, 50) + "..." : brand.Description ?? "-")</span>
                                    </td>
                                    <td class="text-center">
                                        <a href="@Url.Action("Index", "Model", new { brandId = brand.Id })" class="badge bg-primary text-decoration-none">
                                            @brand.ProductCount ürün
                                        </a>
                                    </td>
                                    <td class="text-center">
                                        @if (brand.IsActive)
                                        {
                                            <span class="badge bg-success">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Pasif</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Edit" asp-route-id="@brand.Id" class="btn btn-outline-primary" title="Düzenle">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@brand.Id" class="btn btn-outline-info" title="Detay">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-danger" title="Sil" 
                                                    data-bs-toggle="modal" data-bs-target="#deleteModal"
                                                    data-brand-id="@brand.Id" data-brand-name="@brand.Name">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-bookmark-star display-1 text-muted"></i>
                    <h5 class="mt-3">Henüz marka eklenmemiş</h5>
                    <p class="text-muted">Yeni bir marka ekleyerek başlayın.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-lg me-1"></i>Yeni Marka Ekle
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Marka Silme Onayı</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><strong id="brandNameToDelete"></strong> markasını silmek istediğinizden emin misiniz?</p>
                <p class="text-danger mb-0"><small>Bu işlem geri alınamaz.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <form id="deleteForm" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Sil</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Search functionality
    document.getElementById('searchInput').addEventListener('keyup', function() {
        const filter = this.value.toLowerCase();
        const rows = document.querySelectorAll('#brandsTable tbody tr');
        
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            row.style.display = text.includes(filter) ? '' : 'none';
        });
    });

    // Delete modal
    document.getElementById('deleteModal').addEventListener('show.bs.modal', function(event) {
        const button = event.relatedTarget;
        const brandId = button.getAttribute('data-brand-id');
        const brandName = button.getAttribute('data-brand-name');
        
        document.getElementById('brandNameToDelete').textContent = brandName;
        document.getElementById('deleteForm').action = '@Url.Action("Delete")/' + brandId;
    });
</script>
}
