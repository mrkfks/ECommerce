@model Dashboard.Web.Services.BrandCreateViewModel
@{
    ViewData["Title"] = "Yeni Marka";
    var companies = ViewBag.Companies as List<Dashboard.Web.Services.CompanyViewModel> ?? new List<Dashboard.Web.Services.CompanyViewModel>();
}

<div class="container-fluid">
    <!-- Header -->
    <div class="mb-4">
        <h1 class="h3 mb-1">
            <i class="bi bi-plus-circle text-primary me-2"></i>Yeni Marka Oluştur
        </h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Ana Sayfa</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index")">Markalar</a></li>
                <li class="breadcrumb-item active">Yeni Marka</li>
            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="row g-3">
                            <!-- Marka Adı -->
                            <div class="col-md-6">
                                <label class="form-label">Marka Adı <span class="text-danger">*</span></label>
                                <input asp-for="Name" class="form-control" placeholder="Örn: Apple, Samsung" required />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <!-- Şirket -->
                            <div class="col-md-6">
                                <label class="form-label">Şirket</label>
                                <select asp-for="CompanyId" class="form-select">
                                    <option value="">-- Tüm Şirketler --</option>
                                    @foreach (var company in companies)
                                    {
                                        <option value="@company.Id">@company.Name</option>
                                    }
                                </select>
                            </div>

                            <!-- Açıklama -->
                            <div class="col-12">
                                <label class="form-label">Açıklama</label>
                                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Marka hakkında kısa açıklama..."></textarea>
                            </div>

                            <!-- Aktif -->
                            <div class="col-12">
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                                    <label class="form-check-label" asp-for="IsActive">Aktif</label>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Geri
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-1"></i>Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Sidebar Info -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm bg-light">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="bi bi-info-circle text-primary me-2"></i>Bilgi
                    </h6>
                    <p class="small text-muted mb-2">
                        Markalar, ürünlerinizi kategorize etmenize yardımcı olur.
                    </p>
                    <ul class="small text-muted mb-0">
                        <li>Marka adı benzersiz olmalıdır</li>
                        <li>Logo için önerilen boyut: 200x200 px</li>
                        <li>Aktif olmayan markalar müşterilere gösterilmez</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
