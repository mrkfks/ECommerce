@model ECommerce.Application.DTOs.ProductCreateDto
@inject IConfiguration Configuration

@{
    ViewData["Title"] = "Yeni Ürün Ekle";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fa-solid fa-plus me-2"></i> Yeni Ürün Ekle</h5>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-semibold">Ürün Adı</label>
                        <input asp-for="Name" class="form-control" placeholder="Ürün adını giriniz" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Price" class="form-label fw-semibold">Fiyat</label>
                        <input asp-for="Price" class="form-control" placeholder="0.00" type="number" step="0.01" />
                        <span asp-validation-for="Price" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="StockQuantity" class="form-label fw-semibold">Stok Miktarı</label>
                        <input asp-for="StockQuantity" class="form-control" placeholder="0" type="number" />
                        <span asp-validation-for="StockQuantity" class="text-danger small"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label fw-semibold">Kategori</label>
                        <select asp-for="CategoryId" class="form-select" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                            <option value="">-- Kategori Seçiniz --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger small"></span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="BrandId" class="form-label fw-semibold">Marka</label>
                        <select asp-for="BrandId" class="form-select" asp-items="@(new SelectList(ViewBag.Brands, "Id", "Name"))">
                            <option value="">-- Marka Seçiniz --</option>
                        </select>
                        <span asp-validation-for="BrandId" class="text-danger small"></span>
                    </div>
                </div>
            </div>
            
            @if(User.IsInRole("SuperAdmin"))
            {
                 <div class="mb-3">
                    <label asp-for="CompanyId" class="form-label fw-semibold">Şirket</label>
                    <select asp-for="CompanyId" class="form-select" asp-items="@(new SelectList(ViewBag.Companies, "Id", "Name"))">
                            <option value="">-- Şirket Seçiniz --</option>
                    </select>
                    <span asp-validation-for="CompanyId" class="text-danger small"></span>
                </div>
            }
            else
            {
                 <input type="hidden" asp-for="CompanyId" value="@(User.FindFirst("CompanyId")?.Value ?? "1")" />
            }


            <div class="mb-3">
                <label class="form-label fw-semibold">Ürün Resmi</label>
                <input type="file" class="form-control" id="imageFile" name="imageFile" accept="image/*" onchange="previewImage(event)">
                <input type="hidden" asp-for="ImageUrl" id="imageUrlHidden" />
                <div id="imagePreviewDiv" class="mt-3" style="display: none;">
                    <img id="imagePreviewImg" src="" alt="Resim Önizlemesi" style="max-width: 200px; max-height: 200px; border-radius: 8px; border: 2px solid #dee2e6;">
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-semibold">Açıklama</label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Ürün açıklamasını giriniz"></textarea>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="fa-solid fa-check me-2"></i> Kaydet
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa-solid fa-xmark me-2"></i> İptal
                </a>
            </div>
        </form>
    </div>
</div>

<script>
function previewImage(event) {
    const input = event.target;
    if (input.files && input.files[0]) {
        const reader = new FileReader();
        reader.onload = function(e) {
            document.getElementById('imagePreviewImg').src = e.target.result;
            document.getElementById('imagePreviewDiv').style.display = 'block';
        };
        reader.readAsDataURL(input.files[0]);
    }
}
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

