@model List<Dashboard.Web.Models.ProductViewModel>

@{
    ViewData["Title"] = "Ürün Listesi";
}

<div class="mb-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Product" asp-action="Index">@(User.IsInRole("SuperAdmin") ? "Envanter Yönetimi" : "Ürün Yönetimi")</a></li>
            <li class="breadcrumb-item active">Ürün Listesi</li>
        </ol>
    </nav>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fa-solid fa-box-open me-2"></i> Ürün Listesi</h5>
        @if (User.IsInRole("CompanyAdmin") || User.IsInRole("SuperAdmin"))
        {
            <a asp-action="Create" class="btn btn-primary btn-sm">
                <i class="fa fa-plus"></i> Yeni Ürün
            </a>
        }
    </div>
    <div class="card-body p-0">
        @if (Model == null || Model.Count == 0)
        {
            <div class="alert alert-info m-3">
                <i class="fa-solid fa-info-circle me-2"></i> Henüz ürün bulunmamaktadır.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Ad</th>
                            <th>Fiyat</th>
                            <th>Stok</th>
                            <th>Kategori</th>
                            @if (User.IsInRole("SuperAdmin"))
                            {
                                <th>Şirket</th>
                            }
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Id</td>
                            <td>@product.Name</td>
                            <td>@product.Price.ToString("C")</td>
                            <td>@product.StockQuantity</td>
                            <td>@product.CategoryName</td>
                            @if (User.IsInRole("SuperAdmin"))
                            {
                                <td><span class="badge bg-secondary">@product.CompanyName</span></td>
                            }
                            <td>
                                <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-sm btn-info">Detaylar</a>
                                @if (User.IsInRole("CompanyAdmin") || User.IsInRole("SuperAdmin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-warning">Düzenle</a>
                                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-danger">Sil</a>
                                }
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
