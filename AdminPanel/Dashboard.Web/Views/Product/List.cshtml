@model List<ECommerce.Application.DTOs.ProductDto>

@{
    ViewData["Title"] = "Ürün Listesi";
}

<div class="mb-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Product" asp-action="Index">@(User.IsInRole("SuperAdmin") ? "Envanter Yönetimi" : "Ürün Yönetimi")</a></li>
            <li class="breadcrumb-item active">Ürün Listesi</li>
        </ol>
    </nav>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fa-solid fa-box-open me-2"></i> Ürün Listesi</h5>
        @if (User.IsInRole("CompanyAdmin") || User.IsInRole("SuperAdmin"))
        {
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-success btn-sm" id="btnBulkUpdate" style="display:none;" data-bs-toggle="modal" data-bs-target="#bulkUpdateModal">
                    <i class="fa-solid fa-money-bill-trend-up me-1"></i> Toplu Fiyat Güncelle
                </button>
                <a asp-action="Create" class="btn btn-primary btn-sm">
                    <i class="fa fa-plus"></i> Yeni Ürün
                </a>
            </div>
        }
    </div>
    <div class="card-body p-0">
        @if (Model == null || Model.Count == 0)
        {
            <div class="alert alert-info m-3">
                <i class="fa-solid fa-info-circle me-2"></i> Henüz ürün bulunmamaktadır.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 40px;">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="selectAll">
                                </div>
                            </th>
                            <th>ID</th>
                            <th>Ad</th>
                            <th>Fiyat</th>
                            <th>Stok</th>
                            <th>Kategori</th>
                            @if (User.IsInRole("SuperAdmin"))
                            {
                                <th>Şirket</th>
                            }
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>
                                <div class="form-check">
                                    <input class="form-check-input product-check" type="checkbox" value="@product.Id">
                                </div>
                            </td>
                            <td>@product.Id</td>
                            <td>@product.Name</td>
                            <td>@product.Price.ToString("C")</td>
                            <td>@product.StockQuantity</td>
                            <td>@product.CategoryName</td>
                            @if (User.IsInRole("SuperAdmin"))
                            {
                                <td><span class="badge bg-secondary">@product.CompanyName</span></td>
                            }
                            <td>
                                <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-sm btn-info">Detaylar</a>
                                @if (User.IsInRole("CompanyAdmin") || User.IsInRole("SuperAdmin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-warning">Düzenle</a>
                                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-danger">Sil</a>
                                }
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
    </div>
</div>

<!-- Bulk Update Modal -->
<div class="modal fade" id="bulkUpdateModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Toplu Fiyat Güncelleme</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Seçili <span id="selectedCount" class="fw-bold">0</span> ürünün fiyatını güncellemek üzeresiniz.</p>
                <div class="mb-3">
                    <label class="form-label">Artış Oranı (%)</label>
                    <input type="number" id="pricePercentage" class="form-control" placeholder="Örn: 10" value="10">
                    <small class="text-muted">Fiyatları düşürmek için negatif değer girin (Örn: -10).</small>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary" id="confirmBulkUpdate">Güncelle</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="module" src="~/js/modules/product-management.js"></script>
}
