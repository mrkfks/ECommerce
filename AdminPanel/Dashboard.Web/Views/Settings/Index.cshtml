@model List<Dashboard.Web.Services.GlobalAttributeViewModel>
@{
    ViewData["Title"] = "Site Ayarları";
    var groups = ViewBag.Groups as List<string> ?? new List<string>();
    var selectedGroup = ViewBag.SelectedGroup as string;
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">
                <i class="bi bi-gear text-primary me-2"></i>Site Ayarları
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Ana Sayfa</a></li>
                    <li class="breadcrumb-item active">Ayarlar</li>
                </ol>
            </nav>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i>Yeni Ayar
        </a>
    </div>

    <!-- Alerts -->
    @if (TempData["AttributeSuccess"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["AttributeSuccess"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["AttributeError"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["AttributeError"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Sidebar - Groups -->
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent">
                    <h6 class="card-title mb-0">Gruplar</h6>
                </div>
                <div class="list-group list-group-flush">
                    <a href="@Url.Action("Index")" class="list-group-item list-group-item-action @(string.IsNullOrEmpty(selectedGroup) ? "active" : "")">
                        <i class="bi bi-collection me-2"></i>Tümü
                        <span class="badge bg-secondary float-end">@Model.Count</span>
                    </a>
                    @foreach (var group in groups)
                    {
                        var count = Model.Count(a => a.Group == group);
                        <a href="@Url.Action("Index", new { group })" 
                           class="list-group-item list-group-item-action @(selectedGroup == group ? "active" : "")">
                            <i class="bi bi-folder me-2"></i>@group
                            <span class="badge bg-secondary float-end">@count</span>
                        </a>
                    }
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        @(string.IsNullOrEmpty(selectedGroup) ? "Tüm Ayarlar" : selectedGroup)
                    </h5>
                    <div class="input-group" style="max-width: 300px;">
                        <span class="input-group-text bg-transparent border-end-0">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" class="form-control border-start-0" id="searchInput" placeholder="Anahtar veya değer ara...">
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0" id="settingsTable">
                                <thead class="table-light">
                                    <tr>
                                        <th>Anahtar</th>
                                        <th>Değer</th>
                                        <th>Grup</th>
                                        <th style="width: 150px;">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var attr in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@attr.Key</strong>
                                                @if (!string.IsNullOrEmpty(attr.Description))
                                                {
                                                    <br><small class="text-muted">@attr.Description</small>
                                                }
                                            </td>
                                            <td>
                                                <input type="text" class="form-control form-control-sm quick-update" 
                                                       data-id="@attr.Id" value="@attr.Value" style="max-width: 300px;">
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(attr.Group))
                                                {
                                                    <span class="badge bg-info">@attr.Group</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a asp-action="Edit" asp-route-id="@attr.Id" class="btn btn-outline-primary" title="Düzenle">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-outline-danger" title="Sil" 
                                                            data-bs-toggle="modal" data-bs-target="#deleteModal"
                                                            data-attr-id="@attr.Id" data-attr-key="@attr.Key" data-attr-group="@attr.Group">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-gear display-1 text-muted"></i>
                            <h5 class="mt-3">Henüz ayar eklenmemiş</h5>
                            <a asp-action="Create" class="btn btn-primary mt-2">
                                <i class="bi bi-plus-lg me-1"></i>Yeni Ayar Ekle
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ayar Silme Onayı</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><strong id="attrKeyToDelete"></strong> ayarını silmek istediğinizden emin misiniz?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <form id="deleteForm" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Sil</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Search
    document.getElementById('searchInput').addEventListener('keyup', function() {
        const filter = this.value.toLowerCase();
        const rows = document.querySelectorAll('#settingsTable tbody tr');
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            row.style.display = text.includes(filter) ? '' : 'none';
        });
    });

    // Quick update
    let updateTimeout;
    document.querySelectorAll('.quick-update').forEach(input => {
        input.addEventListener('input', function() {
            const el = this;
            clearTimeout(updateTimeout);
            updateTimeout = setTimeout(() => {
                fetch('@Url.Action("QuickUpdate")', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ id: el.dataset.id, value: el.value })
                })
                .then(r => r.json())
                .then(data => {
                    if (data.success) {
                        el.classList.add('border-success');
                        setTimeout(() => el.classList.remove('border-success'), 2000);
                    }
                });
            }, 500);
        });
    });

    // Delete modal
    document.getElementById('deleteModal').addEventListener('show.bs.modal', function(event) {
        const button = event.relatedTarget;
        const id = button.getAttribute('data-attr-id');
        const key = button.getAttribute('data-attr-key');
        const group = button.getAttribute('data-attr-group');
        document.getElementById('attrKeyToDelete').textContent = key;
        document.getElementById('deleteForm').action = '@Url.Action("Delete")/' + id + (group ? '?group=' + group : '');
    });
</script>
}
