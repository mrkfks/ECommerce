@model List<ECommerce.Application.DTOs.ReviewDto>

@{
    ViewData["Title"] = "Yorumlar";
}

<div class="card">
    <div class="card-header">
        <h5>Yorum Listesi</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Ürün</th>
                        <th>Kullanıcı</th>
                        <th>Yorum</th>
                        <th>Tarih</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var review in Model)
                {
                    <tr>
                        <td>@review.Id</td>
                        <td>@review.ProductName</td>
                        <td>@review.ReviewerName</td>
                        <td>@review.Comment</td>
                        <td>@review.CreatedAt.ToString("dd.MM.yyyy")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@review.Id" class="btn btn-sm btn-info">Detay</a>
                            <a asp-action="Delete" asp-route-id="@review.Id" class="btn btn-sm btn-danger">Sil</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
