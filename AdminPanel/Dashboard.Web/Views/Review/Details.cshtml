@model ECommerce.Application.DTOs.ReviewDto

@{
    ViewData["Title"] = "Yorum Detayı";
}

<div class="card">
    <div class="card-header">
        <h5>Yorum Detayı</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Ürün</dt>
            <dd class="col-sm-9">@Model.ProductName</dd>

            <dt class="col-sm-3">Kullanıcı</dt>
            <dd class="col-sm-9">@Model.ReviewerName</dd>

            <dt class="col-sm-3">Yorum</dt>
            <dd class="col-sm-9">@Model.Comment</dd>

            <dt class="col-sm-3">Tarih</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>
        </dl>

        <a asp-action="Index" class="btn btn-secondary">Geri</a>
    </div>
</div>
