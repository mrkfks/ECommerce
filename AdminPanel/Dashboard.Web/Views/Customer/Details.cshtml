@model ECommerce.Application.DTOs.CustomerDto

@{
    ViewData["Title"] = "Müşteri Detayı";
}

<div class="card">
    <div class="card-header">
        <h5>Müşteri Detayı</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Ad Soyad</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Telefon</dt>
            <dd class="col-sm-9">@Model.PhoneNumber</dd>

            <dt class="col-sm-3">Adresler</dt>
            <dd class="col-sm-9">
                @if (Model.Addresses != null && Model.Addresses.Any())
                {
                    foreach (var address in Model.Addresses)
                    {
                        <div>@address.Street, @address.City, @address.State @address.PostalCode, @address.Country</div>
                    }
                }
                else
                {
                    <span class="text-muted">Adres bulunmamaktadır</span>
                }
            </dd>
        </dl>

        <a asp-action="Index" class="btn btn-secondary">Geri</a>
    </div>
</div>
