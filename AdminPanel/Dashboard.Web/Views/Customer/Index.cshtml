@model List<ECommerce.Application.DTOs.CustomerDto>

@{
    ViewData["Title"] = "Müşteriler";
}

<div class="card">
    <div class="card-header">
        <h5>Müşteri Listesi</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Ad Soyad</th>
                        <th>Email</th>
                        <th>Telefon</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.Id</td>
                        <td>@customer.Name</td>
                        <td>@customer.Email</td>
                        <td>@customer.PhoneNumber</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@customer.Id" class="btn btn-sm btn-info">Detay</a>
                            <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-sm btn-warning">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@customer.Id" class="btn btn-sm btn-danger">Sil</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
