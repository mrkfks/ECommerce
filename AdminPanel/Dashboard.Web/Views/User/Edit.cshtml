@model ECommerce.Application.DTOs.UserDto

@{
    ViewData["Title"] = "Kullanıcı Düzenle";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2 class="section-title">Kullanıcı Düzenle</h2>
        <p class="text-muted">Kullanıcı bilgilerini ve rollerini güncelleyin.</p>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left me-2"></i> Listeye Dön
        </a>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedAt" />

            <div class="row g-3">
                @if (User.IsInRole("SuperAdmin"))
                {
                    <div class="col-md-12">
                        <label asp-for="CompanyId" class="form-label fw-bold">Şirket <span class="text-danger">*</span></label>
                        <select asp-for="CompanyId" class="form-select" required>
                            <option value="">Şirket Seçiniz</option>
                            @if (ViewBag.Companies != null)
                            {
                                foreach (var company in (List<ECommerce.Application.DTOs.CompanyDto>)ViewBag.Companies)
                                {
                                    <option value="@company.Id" selected="@(Model.CompanyId == company.Id)">@company.Name</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="CompanyId" class="text-danger"></span>
                    </div>
                }
                else
                {
                    <div class="col-md-12">
                        <label class="form-label fw-bold">Şirket</label>
                        <input type="text" class="form-control" value="@Model.CompanyName" readonly />
                        <input type="hidden" asp-for="CompanyId" />
                    </div>
                }
                <div class="col-md-6">
                    <label asp-for="FirstName" class="form-label fw-bold">Ad</label>
                    <input asp-for="FirstName" class="form-control" required />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="LastName" class="form-label fw-bold">Soyad</label>
                    <input asp-for="LastName" class="form-control" required />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Username" class="form-label fw-bold">Kullanıcı Adı</label>
                    <input asp-for="Username" class="form-control" readonly />
                </div>
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label fw-bold">E-posta</label>
                    <input asp-for="Email" class="form-control" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
                <div class="col-12">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" asp-for="IsActive" id="isActiveSwitch">
                        <label class="form-check-label fw-bold" for="isActiveSwitch">
                            Hesap Aktif
                        </label>
                    </div>
                </div>

                @if (User.IsInRole("SuperAdmin"))
                {
                    <div class="col-12">
                        <label class="form-label fw-bold d-block mb-2">Roller</label>
                        <div class="d-flex flex-wrap gap-3">
                            @if (ViewBag.AllRoles != null)
                            {
                                foreach (var role in (List<string>)ViewBag.AllRoles)
                                {
                                    var isChecked = Model.Roles != null && Model.Roles.Contains(role);
                                    <div class="form-check border rounded px-3 py-2 bg-light">
                                        <input class="form-check-input" type="checkbox" name="SelectedRoles" value="@role" id="role_@role" @(isChecked ? "checked" : "")>
                                        <label class="form-check-label ms-1" for="role_@role">
                                            @role
                                        </label>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                }
                else
                {
                    <!-- CompanyAdmin mevcut rolleri korur, değiştiremez -->
                    @if (Model.Roles != null)
                    {
                        foreach (var role in Model.Roles)
                        {
                            <input type="hidden" name="SelectedRoles" value="@role" />
                        }
                    }
                    <div class="col-12">
                        <div class="alert alert-info">
                            <i class="fa-solid fa-info-circle me-2"></i>
                            <strong>Rol Bilgisi:</strong> Bu kullanıcının rolleri sadece SuperAdmin tarafından değiştirilebilir.
                        </div>
                    </div>
                }

                <div class="col-12 mt-4">
                    <button type="submit" class="btn btn-primary px-4 py-2">
                        <i class="fa-solid fa-save me-2"></i> Değişiklikleri Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4 py-2">İptal</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
