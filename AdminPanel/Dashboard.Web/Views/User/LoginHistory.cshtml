@model List<Dashboard.Web.Services.LoginHistoryVm>
@{
    ViewData["Title"] = "Giriş Geçmişi";
    var userId = ViewBag.UserId as int?;
}

@section Styles {
<style>
    .login-item {
        border-left: 3px solid transparent;
        transition: all 0.2s;
    }
    .login-item:hover {
        background-color: rgba(13, 110, 253, 0.05);
    }
    .login-item.suspicious {
        border-left-color: #dc3545;
        background-color: rgba(220, 53, 69, 0.05);
    }
    .login-item.failed {
        border-left-color: #ffc107;
        background-color: rgba(255, 193, 7, 0.05);
    }
    .role-badge-superadmin { background: #dc3545; color: white; }
    .role-badge-companyadmin { background: #0d6efd; color: white; }
    .role-badge-customer { background: #198754; color: white; }
    .role-badge-default { background: #6c757d; color: white; }
    .user-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 14px;
    }
    .ip-badge {
        font-family: 'Consolas', monospace;
        font-size: 12px;
    }
</style>
}

<div class="container-fluid">
    <!-- Sayfa Başlığı -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-1"><i class="fa-solid fa-clock-rotate-left me-2"></i>Giriş Geçmişi</h4>
            <p class="text-muted mb-0">Kullanıcı giriş aktivitelerini izleyin</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="SuspiciousLogins" class="btn btn-outline-danger">
                <i class="fa-solid fa-triangle-exclamation me-1"></i> Şüpheli Girişler
            </a>
            <a asp-action="Management" class="btn btn-outline-primary">
                <i class="fa-solid fa-arrow-left me-1"></i> Kullanıcı Yönetimi
            </a>
        </div>
    </div>

    <!-- Özet Kartları -->
    <div class="row g-3 mb-4" id="summaryCards">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center py-3">
                    <div class="h3 mb-1 text-primary" id="totalLogins">-</div>
                    <div class="text-muted small">Bugünkü Giriş</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center py-3">
                    <div class="h3 mb-1 text-success" id="uniqueUsers">-</div>
                    <div class="text-muted small">Benzersiz Kullanıcı</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center py-3">
                    <div class="h3 mb-1 text-warning" id="failedLogins">-</div>
                    <div class="text-muted small">Başarısız Giriş</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center py-3">
                    <div class="h3 mb-1 text-danger" id="suspiciousLogins">-</div>
                    <div class="text-muted small">Şüpheli Giriş</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Giriş Listesi -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h6 class="mb-0">
                <i class="fa-solid fa-list me-2"></i>
                @if (userId.HasValue)
                {
                    <span>Kullanıcı #@userId Giriş Geçmişi</span>
                }
                else
                {
                    <span>Tüm Giriş Kayıtları</span>
                }
            </h6>
            <span class="badge bg-secondary">@Model.Count kayıt</span>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 250px;">Kullanıcı</th>
                            <th>IP Adresi</th>
                            <th>Tarayıcı / İşletim Sistemi</th>
                            <th>Giriş Zamanı</th>
                            <th>Durum</th>
                            <th class="text-end">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var login in Model)
                            {
                                var rowClass = login.IsSuspicious ? "suspicious" : (!login.IsSuccessful ? "failed" : "");
                                var initials = !string.IsNullOrEmpty(login.UserFullName) 
                                    ? string.Join("", login.UserFullName.Split(' ').Where(s => !string.IsNullOrEmpty(s)).Select(s => s[0]))
                                    : login.Username[0].ToString().ToUpper();
                                var avatarColor = login.RoleName switch
                                {
                                    "SuperAdmin" => "bg-danger text-white",
                                    "CompanyAdmin" => "bg-primary text-white",
                                    "Customer" => "bg-success text-white",
                                    _ => "bg-secondary text-white"
                                };
                                <tr class="login-item @rowClass">
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="user-avatar @avatarColor me-3">@initials.ToUpper()</div>
                                            <div>
                                                <div class="fw-semibold">@(login.UserFullName ?? login.Username)</div>
                                                <small class="text-muted">@@@login.Username</small>
                                                @if (!string.IsNullOrEmpty(login.RoleName))
                                                {
                                                    var badgeClass = login.RoleName switch
                                                    {
                                                        "SuperAdmin" => "role-badge-superadmin",
                                                        "CompanyAdmin" => "role-badge-companyadmin",
                                                        "Customer" => "role-badge-customer",
                                                        _ => "role-badge-default"
                                                    };
                                                    <span class="badge @badgeClass ms-1" style="font-size: 10px;">@login.RoleName</span>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <code class="ip-badge">@login.IpAddress</code>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(login.Browser))
                                        {
                                            <small><i class="fa-solid fa-globe me-1"></i>@login.Browser</small><br>
                                        }
                                        @if (!string.IsNullOrEmpty(login.OperatingSystem))
                                        {
                                            <small class="text-muted"><i class="fa-solid fa-desktop me-1"></i>@login.OperatingSystem</small>
                                        }
                                        @if (string.IsNullOrEmpty(login.Browser) && string.IsNullOrEmpty(login.OperatingSystem))
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <div>
                                            <small>@login.LoginTime.ToString("dd MMM yyyy HH:mm:ss")</small><br>
                                            <small class="text-muted">@login.TimeAgo</small>
                                        </div>
                                    </td>
                                    <td>
                                        @if (login.IsSuspicious)
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fa-solid fa-triangle-exclamation me-1"></i> Şüpheli
                                            </span>
                                            @if (!string.IsNullOrEmpty(login.SuspiciousReason))
                                            {
                                                <br><small class="text-danger">@login.SuspiciousReason</small>
                                            }
                                        }
                                        else if (!login.IsSuccessful)
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="fa-solid fa-times me-1"></i> Başarısız
                                            </span>
                                            @if (!string.IsNullOrEmpty(login.FailureReason))
                                            {
                                                <br><small class="text-warning">@login.FailureReason</small>
                                            }
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">
                                                <i class="fa-solid fa-check me-1"></i> Başarılı
                                            </span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        @if (login.IsSuspicious)
                                        {
                                            <button class="btn btn-sm btn-outline-success" onclick="clearSuspicion(@login.Id)" title="Şüpheyi Temizle">
                                                <i class="fa-solid fa-check-double"></i>
                                            </button>
                                        }
                                        <a asp-action="LoginHistory" asp-route-userId="@login.UserId" class="btn btn-sm btn-outline-secondary" title="Kullanıcı Geçmişi">
                                            <i class="fa-solid fa-history"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5">
                                    <i class="fa-solid fa-clock-rotate-left fa-3x text-muted mb-3"></i>
                                    <p class="text-muted mb-0">Giriş kaydı bulunamadı</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Toast -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="toast" class="toast" role="alert">
        <div class="toast-header">
            <i class="fa-solid fa-check-circle text-success me-2" id="toastIcon"></i>
            <strong class="me-auto" id="toastTitle">Bilgi</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
        </div>
        <div class="toast-body" id="toastMessage"></div>
    </div>
</div>

@section Scripts {
<script>
    const toast = new bootstrap.Toast(document.getElementById('toast'));

    function showToast(title, message, isSuccess = true) {
        document.getElementById('toastTitle').textContent = title;
        document.getElementById('toastMessage').textContent = message;
        const icon = document.getElementById('toastIcon');
        icon.className = isSuccess ? 'fa-solid fa-check-circle text-success me-2' : 'fa-solid fa-times-circle text-danger me-2';
        toast.show();
    }

    async function clearSuspicion(loginId) {
        if (!confirm('Bu girişin şüpheli işaretini kaldırmak istediğinize emin misiniz?')) return;
        
        try {
            const response = await fetch('/User/ClearSuspicion', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(loginId)
            });
            
            const data = await response.json();
            
            if (data.success) {
                showToast('Başarılı', data.message);
                setTimeout(() => location.reload(), 1000);
            } else {
                showToast('Hata', data.message, false);
            }
        } catch (error) {
            showToast('Hata', 'Bir hata oluştu.', false);
        }
    }

    // Özet bilgilerini yükle
    async function loadSummary() {
        try {
            const response = await fetch('/User/GetLoginHistorySummary');
            const data = await response.json();
            
            document.getElementById('totalLogins').textContent = data.totalLogins || 0;
            document.getElementById('uniqueUsers').textContent = data.uniqueUsers || 0;
            document.getElementById('failedLogins').textContent = data.failedLogins || 0;
            document.getElementById('suspiciousLogins').textContent = data.suspiciousLogins || 0;
        } catch (error) {
            console.log('Summary load error:', error);
        }
    }

    // Sayfa yüklendiğinde özeti getir
    document.addEventListener('DOMContentLoaded', loadSummary);
</script>
}
