@model ECommerce.Application.DTOs.UserCreateDto

@{
    ViewData["Title"] = "Yeni Personel Ekle";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2 class="section-title">Yeni Personel Ekle</h2>
        <p class="text-muted">Şirketiniz için yeni bir çalışan hesabı oluşturun.</p>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left me-2"></i> Listeye Dön
        </a>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-4">
        
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <div asp-validation-summary="All" class="text-danger mb-0"></div>
            </div>
        }

        <form asp-action="Create" method="post">
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="FirstName" class="form-label fw-bold">Ad</label>
                    <input asp-for="FirstName" class="form-control" placeholder="Ad" required />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="LastName" class="form-label fw-bold">Soyad</label>
                    <input asp-for="LastName" class="form-control" placeholder="Soyad" required />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Username" class="form-label fw-bold">Kullanıcı Adı</label>
                    <input asp-for="Username" class="form-control" placeholder="Kullanıcı adı" required />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label fw-bold">E-posta</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="E-posta adresi" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-md-12">
                    <label asp-for="Password" class="form-label fw-bold">Şifre</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Şifre belirleyin" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                
                @if (User.IsInRole("SuperAdmin") && ViewBag.Companies != null)
                {
                    <div class="col-md-12">
                        <label asp-for="CompanyId" class="form-label fw-bold">Şirket <span class="text-danger">*</span></label>
                        <select asp-for="CompanyId" class="form-select" required>
                            <option value="">Şirket seçiniz...</option>
                            @foreach (var company in (List<ECommerce.Application.DTOs.CompanyDto>)ViewBag.Companies)
                            {
                                <option value="@company.Id">@company.Name</option>
                            }
                        </select>
                        <span asp-validation-for="CompanyId" class="text-danger"></span>
                    </div>
                }
                else
                {
                    <!-- CompanyAdmin için CompanyId otomatik atanacak, görünmeyen field -->
                    <input type="hidden" asp-for="CompanyId" value="" />
                }
                
                @if (User.IsInRole("SuperAdmin"))
                {
                    <div class="col-12">
                         <label class="form-label fw-bold d-block mb-2">Roller</label>
                         <div class="d-flex flex-wrap gap-3">
                            @if (ViewBag.AllRoles != null)
                            {
                                foreach (var role in (List<string>)ViewBag.AllRoles)
                                {
                                    <div class="form-check border rounded px-3 py-2 bg-light">
                                        <input class="form-check-input" type="checkbox" name="SelectedRoles" value="@role" id="role_@role">
                                        <label class="form-check-label ms-1" for="role_@role">
                                            @role
                                        </label>
                                    </div>
                                }
                            }
                         </div>
                    </div>
                }
                else
                {
                    <!-- CompanyAdmin için otomatik User rolü atanır -->
                    <input type="hidden" name="SelectedRoles" value="User" />
                }

                <div class="col-12 mt-4">
                    <button type="submit" class="btn btn-primary px-4 py-2">
                        <i class="fa-solid fa-user-plus me-2"></i> Personeli Kaydet
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
