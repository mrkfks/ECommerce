@model List<Dashboard.Web.Services.LoginHistoryVm>
@{
    ViewData["Title"] = "Şüpheli Girişler";
}

@section Styles {
<style>
    .suspicious-card {
        border-left: 4px solid #dc3545;
        transition: all 0.2s;
    }
    .suspicious-card:hover {
        box-shadow: 0 4px 15px rgba(220, 53, 69, 0.2);
    }
    .role-badge-superadmin { background: #dc3545; color: white; }
    .role-badge-companyadmin { background: #0d6efd; color: white; }
    .role-badge-customer { background: #198754; color: white; }
    .role-badge-default { background: #6c757d; color: white; }
    .user-avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 16px;
    }
    .pulse-danger {
        animation: pulseDanger 2s infinite;
    }
    @@keyframes pulseDanger {
        0%, 100% { box-shadow: 0 0 0 0 rgba(220, 53, 69, 0.4); }
        50% { box-shadow: 0 0 0 10px rgba(220, 53, 69, 0); }
    }
</style>
}

<div class="container-fluid">
    <!-- Sayfa Başlığı -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-1 text-danger"><i class="fa-solid fa-triangle-exclamation me-2"></i>Şüpheli Girişler</h4>
            <p class="text-muted mb-0">Güvenlik açısından incelenmesi gereken giriş aktiviteleri</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="LoginHistory" class="btn btn-outline-secondary">
                <i class="fa-solid fa-clock-rotate-left me-1"></i> Tüm Girişler
            </a>
            <a asp-action="Management" class="btn btn-outline-primary">
                <i class="fa-solid fa-arrow-left me-1"></i> Kullanıcı Yönetimi
            </a>
        </div>
    </div>

    <!-- Uyarı -->
    @if (Model.Any())
    {
        <div class="alert alert-danger d-flex align-items-center mb-4">
            <i class="fa-solid fa-shield-halved fa-2x me-3"></i>
            <div>
                <strong>Dikkat!</strong> Aşağıdaki girişler şüpheli aktivite içermektedir. 
                Farklı lokasyon, çok fazla başarısız giriş denemesi veya farklı ağdan giriş gibi nedenlerle işaretlenmiştir.
                Her birini inceleyip gerekli aksiyonu alın.
            </div>
        </div>
    }

    <!-- Şüpheli Giriş Listesi -->
    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var login in Model)
            {
                var initials = !string.IsNullOrEmpty(login.UserFullName) 
                    ? string.Join("", login.UserFullName.Split(' ').Where(s => !string.IsNullOrEmpty(s)).Select(s => s[0]))
                    : login.Username[0].ToString().ToUpper();
                var avatarColor = login.RoleName switch
                {
                    "SuperAdmin" => "bg-danger text-white",
                    "CompanyAdmin" => "bg-primary text-white",
                    "Customer" => "bg-success text-white",
                    _ => "bg-secondary text-white"
                };
                <div class="col-md-6">
                    <div class="card suspicious-card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div class="d-flex align-items-center">
                                    <div class="user-avatar @avatarColor pulse-danger me-3">@initials.ToUpper()</div>
                                    <div>
                                        <h6 class="mb-0">@(login.UserFullName ?? login.Username)</h6>
                                        <small class="text-muted">@@@login.Username</small>
                                        @if (!string.IsNullOrEmpty(login.RoleName))
                                        {
                                            var badgeClass = login.RoleName switch
                                            {
                                                "SuperAdmin" => "role-badge-superadmin",
                                                "CompanyAdmin" => "role-badge-companyadmin",
                                                "Customer" => "role-badge-customer",
                                                _ => "role-badge-default"
                                            };
                                            <span class="badge @badgeClass ms-2">@login.RoleName</span>
                                        }
                                    </div>
                                </div>
                                <span class="badge bg-danger">
                                    <i class="fa-solid fa-triangle-exclamation me-1"></i> Şüpheli
                                </span>
                            </div>

                            <div class="mb-3 p-3 bg-danger bg-opacity-10 rounded">
                                <strong class="text-danger"><i class="fa-solid fa-warning me-1"></i> Şüphe Nedeni:</strong>
                                <p class="mb-0 mt-1">@login.SuspiciousReason</p>
                            </div>

                            <div class="row g-3 text-muted small">
                                <div class="col-6">
                                    <i class="fa-solid fa-network-wired me-1"></i>
                                    <strong>IP:</strong> <code>@login.IpAddress</code>
                                </div>
                                <div class="col-6">
                                    <i class="fa-solid fa-clock me-1"></i>
                                    <strong>Zaman:</strong> @login.LoginTime.ToString("dd MMM yyyy HH:mm")
                                </div>
                                @if (!string.IsNullOrEmpty(login.Browser))
                                {
                                    <div class="col-6">
                                        <i class="fa-solid fa-globe me-1"></i>
                                        <strong>Tarayıcı:</strong> @login.Browser
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(login.OperatingSystem))
                                {
                                    <div class="col-6">
                                        <i class="fa-solid fa-desktop me-1"></i>
                                        <strong>İS:</strong> @login.OperatingSystem
                                    </div>
                                }
                            </div>

                            <hr class="my-3">

                            <div class="d-flex justify-content-between">
                                <div>
                                    <a asp-action="LoginHistory" asp-route-userId="@login.UserId" class="btn btn-sm btn-outline-secondary">
                                        <i class="fa-solid fa-history me-1"></i> Geçmiş
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@login.UserId" class="btn btn-sm btn-outline-primary">
                                        <i class="fa-solid fa-user-edit me-1"></i> Kullanıcı
                                    </a>
                                </div>
                                <div>
                                    <button class="btn btn-sm btn-outline-warning" onclick="deactivateUser(@login.UserId)" title="Kullanıcıyı Devre Dışı Bırak">
                                        <i class="fa-solid fa-user-slash me-1"></i> Engelle
                                    </button>
                                    <button class="btn btn-sm btn-success" onclick="clearSuspicion(@login.Id)">
                                        <i class="fa-solid fa-check-double me-1"></i> Temizle
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="fa-solid fa-shield-check fa-4x text-success mb-3"></i>
                <h5 class="text-success">Şüpheli Giriş Bulunamadı</h5>
                <p class="text-muted mb-0">Tüm giriş aktiviteleri normal görünüyor.</p>
            </div>
        </div>
    }
</div>

<!-- Toast -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="toast" class="toast" role="alert">
        <div class="toast-header">
            <i class="fa-solid fa-check-circle text-success me-2" id="toastIcon"></i>
            <strong class="me-auto" id="toastTitle">Bilgi</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
        </div>
        <div class="toast-body" id="toastMessage"></div>
    </div>
</div>

@section Scripts {
<script>
    const toast = new bootstrap.Toast(document.getElementById('toast'));

    function showToast(title, message, isSuccess = true) {
        document.getElementById('toastTitle').textContent = title;
        document.getElementById('toastMessage').textContent = message;
        const icon = document.getElementById('toastIcon');
        icon.className = isSuccess ? 'fa-solid fa-check-circle text-success me-2' : 'fa-solid fa-times-circle text-danger me-2';
        toast.show();
    }

    async function clearSuspicion(loginId) {
        if (!confirm('Bu girişin şüpheli işaretini kaldırmak istediğinize emin misiniz?')) return;
        
        try {
            const response = await fetch('/User/ClearSuspicion', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(loginId)
            });
            
            const data = await response.json();
            
            if (data.success) {
                showToast('Başarılı', data.message);
                setTimeout(() => location.reload(), 1000);
            } else {
                showToast('Hata', data.message, false);
            }
        } catch (error) {
            showToast('Hata', 'Bir hata oluştu.', false);
        }
    }

    async function deactivateUser(userId) {
        if (!confirm('Bu kullanıcıyı devre dışı bırakmak istediğinize emin misiniz?')) return;
        
        try {
            const response = await fetch('/User/ToggleUserActivation', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ userId, isActive: false })
            });
            
            const data = await response.json();
            
            if (data.success) {
                showToast('Başarılı', 'Kullanıcı devre dışı bırakıldı.');
                setTimeout(() => location.reload(), 1000);
            } else {
                showToast('Hata', data.message, false);
            }
        } catch (error) {
            showToast('Hata', 'Bir hata oluştu.', false);
        }
    }
</script>
}
