@model Dashboard.Web.Services.PagedUserListVm
@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
    var roles = ViewBag.Roles as List<Dashboard.Web.Services.RoleVm> ?? new List<Dashboard.Web.Services.RoleVm>();
    var companies = ViewBag.Companies as List<ECommerce.Application.DTOs.CompanyDto> ?? new List<ECommerce.Application.DTOs.CompanyDto>();
    var summary = ViewBag.Summary as Dashboard.Web.Services.UserManagementSummaryVm ?? new Dashboard.Web.Services.UserManagementSummaryVm();
    var filter = ViewBag.Filter as Dashboard.Web.Services.UserFilterVm ?? new Dashboard.Web.Services.UserFilterVm();
}

@section Styles {
<style>
    .stat-card {
        border-radius: 12px;
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .stat-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    .stat-icon {
        width: 50px;
        height: 50px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }
    .role-badge-superadmin { background: #dc3545; color: white; }
    .role-badge-companyadmin { background: #0d6efd; color: white; }
    .role-badge-customer { background: #198754; color: white; }
    .role-badge-default { background: #6c757d; color: white; }
    .user-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 14px;
    }
    .filter-section {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 1rem;
        margin-bottom: 1.5rem;
    }
    .table-hover tbody tr:hover {
        background-color: rgba(13, 110, 253, 0.05);
    }
    .status-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        display: inline-block;
        margin-right: 6px;
    }
    .status-dot.active { background: #198754; }
    .status-dot.inactive { background: #6c757d; }
    .suspicious-badge {
        animation: pulse 2s infinite;
    }
    @@keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.6; }
    }
</style>
}

<div class="container-fluid">
    <!-- Sayfa Başlığı -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-1"><i class="fa-solid fa-users-gear me-2"></i>Kullanıcı Yönetimi</h4>
            <p class="text-muted mb-0">Kullanıcıları yönetin, roller atayın ve giriş geçmişini izleyin</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="LoginHistory" class="btn btn-outline-secondary">
                <i class="fa-solid fa-clock-rotate-left me-1"></i> Giriş Geçmişi
            </a>
            <a asp-action="SuspiciousLogins" class="btn btn-outline-danger">
                <i class="fa-solid fa-triangle-exclamation me-1"></i> Şüpheli Girişler
                @if (summary.SuspiciousLogins > 0)
                {
                    <span class="badge bg-danger ms-1">@summary.SuspiciousLogins</span>
                }
            </a>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-user-plus me-1"></i> Yeni Kullanıcı
            </a>
        </div>
    </div>

    <!-- Özet Kartları -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="stat-icon bg-primary bg-opacity-10 text-primary me-3">
                        <i class="fa-solid fa-users"></i>
                    </div>
                    <div>
                        <div class="text-muted small">Toplam Kullanıcı</div>
                        <div class="h4 mb-0">@summary.TotalUsers</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="stat-icon bg-success bg-opacity-10 text-success me-3">
                        <i class="fa-solid fa-user-check"></i>
                    </div>
                    <div>
                        <div class="text-muted small">Aktif Kullanıcı</div>
                        <div class="h4 mb-0">@summary.ActiveUsers</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="stat-icon bg-info bg-opacity-10 text-info me-3">
                        <i class="fa-solid fa-right-to-bracket"></i>
                    </div>
                    <div>
                        <div class="text-muted small">Bugünkü Giriş</div>
                        <div class="h4 mb-0">@summary.TodayLogins</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="stat-icon bg-danger bg-opacity-10 text-danger me-3">
                        <i class="fa-solid fa-shield-halved"></i>
                    </div>
                    <div>
                        <div class="text-muted small">Şüpheli Giriş</div>
                        <div class="h4 mb-0 @(summary.SuspiciousLogins > 0 ? "text-danger" : "")">@summary.SuspiciousLogins</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Rol Dağılımı -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body py-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <span class="badge role-badge-superadmin me-2"><i class="fa-solid fa-crown"></i></span>
                            <span>SuperAdmin</span>
                        </div>
                        <span class="h5 mb-0">@summary.SuperAdminCount</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body py-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <span class="badge role-badge-companyadmin me-2"><i class="fa-solid fa-building"></i></span>
                            <span>CompanyAdmin</span>
                        </div>
                        <span class="h5 mb-0">@summary.CompanyAdminCount</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body py-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <span class="badge role-badge-customer me-2"><i class="fa-solid fa-user"></i></span>
                            <span>Customer</span>
                        </div>
                        <span class="h5 mb-0">@summary.CustomerCount</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtreler -->
    <div class="filter-section">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label small text-muted">Arama</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fa-solid fa-search"></i></span>
                    <input type="text" name="search" class="form-control" placeholder="Ad, kullanıcı adı veya e-posta..." value="@filter.SearchTerm">
                </div>
            </div>
            <div class="col-md-2">
                <label class="form-label small text-muted">Rol</label>
                <select name="role" class="form-select">
                    <option value="">Tüm Roller</option>
                    @foreach (var role in roles)
                    {
                        <option value="@role.Name" selected="@(filter.Role == role.Name)">@role.Name</option>
                    }
                </select>
            </div>
            @if (User.IsInRole("SuperAdmin"))
            {
                <div class="col-md-2">
                    <label class="form-label small text-muted">Şirket</label>
                    <select name="companyId" class="form-select">
                        <option value="">Tüm Şirketler</option>
                        @foreach (var company in companies)
                        {
                            <option value="@company.Id" selected="@(filter.CompanyId == company.Id)">@company.Name</option>
                        }
                    </select>
                </div>
            }
            <div class="col-md-2">
                <label class="form-label small text-muted">Durum</label>
                <select name="isActive" class="form-select">
                    <option value="">Tümü</option>
                    <option value="true" selected="@(filter.IsActive == true)">Aktif</option>
                    <option value="false" selected="@(filter.IsActive == false)">Pasif</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fa-solid fa-filter me-1"></i> Filtrele
                </button>
            </div>
            <div class="col-md-1">
                <a asp-action="Management" class="btn btn-outline-secondary w-100">
                    <i class="fa-solid fa-rotate-left"></i>
                </a>
            </div>
        </form>
    </div>

    <!-- Kullanıcı Tablosu -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h6 class="mb-0"><i class="fa-solid fa-list me-2"></i>Kullanıcı Listesi</h6>
            <span class="text-muted small">@Model.TotalCount kullanıcı bulundu</span>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 280px;">Kullanıcı</th>
                            <th>E-posta</th>
                            <th>Rol</th>
                            @if (User.IsInRole("SuperAdmin"))
                            {
                                <th>Şirket</th>
                            }
                            <th>Son Giriş</th>
                            <th>Durum</th>
                            <th class="text-end">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Users.Any())
                        {
                            @foreach (var user in Model.Users)
                            {
                                var initials = (!string.IsNullOrEmpty(user.FirstName) ? user.FirstName[0].ToString() : "") + 
                                               (!string.IsNullOrEmpty(user.LastName) ? user.LastName[0].ToString() : user.Username[0].ToString().ToUpper());
                                var avatarColor = user.PrimaryRole switch
                                {
                                    "SuperAdmin" => "bg-danger text-white",
                                    "CompanyAdmin" => "bg-primary text-white",
                                    "Customer" => "bg-success text-white",
                                    _ => "bg-secondary text-white"
                                };
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="user-avatar @avatarColor me-3">@initials.ToUpper()</div>
                                            <div>
                                                <div class="fw-semibold">@user.FullName</div>
                                                <small class="text-muted">@@@user.Username</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@user.Email</td>
                                    <td>
                                        @if (user.Roles != null)
                                        {
                                            @foreach (var role in user.Roles)
                                            {
                                                var badgeClass = role switch
                                                {
                                                    "SuperAdmin" => "role-badge-superadmin",
                                                    "CompanyAdmin" => "role-badge-companyadmin",
                                                    "Customer" => "role-badge-customer",
                                                    _ => "role-badge-default"
                                                };
                                                <span class="badge @badgeClass me-1">@role</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    @if (User.IsInRole("SuperAdmin"))
                                    {
                                        <td><span class="text-muted">@(user.CompanyName ?? "-")</span></td>
                                    }
                                    <td>
                                        @if (user.LastLoginTime.HasValue)
                                        {
                                            <div>
                                                <small>@user.LastLoginTime.Value.ToString("dd MMM yyyy HH:mm")</small>
                                                @if (!string.IsNullOrEmpty(user.LastLoginIp))
                                                {
                                                    <br><small class="text-muted"><i class="fa-solid fa-network-wired me-1"></i>@user.LastLoginIp</small>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="status-dot @(user.IsActive ? "active" : "inactive")"></span>
                                        @user.StatusText
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-outline-secondary" title="Detay">
                                                <i class="fa-solid fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-outline-primary" title="Düzenle">
                                                <i class="fa-solid fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-warning" title="Rolleri Düzenle" 
                                                    onclick="openRoleModal(@user.Id, '@user.Username', '@(user.Roles != null ? string.Join(",", user.Roles) : string.Empty)')">
                                                <i class="fa-solid fa-user-tag"></i>
                                            </button>
                                            <button type="button" class="btn @(user.IsActive ? "btn-outline-secondary" : "btn-outline-success")" 
                                                    title="@(user.IsActive ? "Devre Dışı Bırak" : "Aktifleştir")"
                                                    onclick="toggleActivation(@user.Id, @(user.IsActive ? "false" : "true"))">
                                                <i class="fa-solid @(user.IsActive ? "fa-user-slash" : "fa-user-check")"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-5">
                                    <i class="fa-solid fa-users-slash fa-3x text-muted mb-3"></i>
                                    <p class="text-muted mb-0">Kullanıcı bulunamadı</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        
        <!-- Sayfalama -->
        @if (Model.TotalPages > 1)
        {
            <div class="card-footer bg-white">
                <nav>
                    <ul class="pagination pagination-sm justify-content-center mb-0">
                        @if (Model.HasPreviousPage)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Management" 
                                   asp-route-page="@(Model.Page - 1)"
                                   asp-route-search="@filter.SearchTerm"
                                   asp-route-role="@filter.Role"
                                   asp-route-companyId="@filter.CompanyId"
                                   asp-route-isActive="@filter.IsActive">
                                    <i class="fa-solid fa-chevron-left"></i>
                                </a>
                            </li>
                        }
                        
                        @for (int i = Math.Max(1, Model.Page - 2); i <= Math.Min(Model.TotalPages, Model.Page + 2); i++)
                        {
                            <li class="page-item @(i == Model.Page ? "active" : "")">
                                <a class="page-link" asp-action="Management" 
                                   asp-route-page="@i"
                                   asp-route-search="@filter.SearchTerm"
                                   asp-route-role="@filter.Role"
                                   asp-route-companyId="@filter.CompanyId"
                                   asp-route-isActive="@filter.IsActive">
                                    @i
                                </a>
                            </li>
                        }
                        
                        @if (Model.HasNextPage)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Management" 
                                   asp-route-page="@(Model.Page + 1)"
                                   asp-route-search="@filter.SearchTerm"
                                   asp-route-role="@filter.Role"
                                   asp-route-companyId="@filter.CompanyId"
                                   asp-route-isActive="@filter.IsActive">
                                    <i class="fa-solid fa-chevron-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

<!-- Rol Düzenleme Modal -->
<div class="modal fade" id="roleModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fa-solid fa-user-tag me-2"></i>Rol Yönetimi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="mb-3">Kullanıcı: <strong id="roleModalUsername"></strong></p>
                <input type="hidden" id="roleModalUserId">
                <div class="mb-3">
                    <label class="form-label">Roller</label>
                    <div id="roleCheckboxes">
                        @foreach (var role in roles)
                        {
                            var roleColor = role.Name switch
                            {
                                "SuperAdmin" => "text-danger",
                                "CompanyAdmin" => "text-primary",
                                "Customer" => "text-success",
                                _ => "text-secondary"
                            };
                            <div class="form-check">
                                <input class="form-check-input role-checkbox" type="checkbox" value="@role.Name" id="role_@role.Name">
                                <label class="form-check-label @roleColor" for="role_@role.Name">
                                    @role.Name
                                    @if (!string.IsNullOrEmpty(role.Description))
                                    {
                                        <small class="text-muted">- @role.Description</small>
                                    }
                                </label>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary" onclick="saveRoles()">
                    <i class="fa-solid fa-save me-1"></i> Kaydet
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Toast -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="toast" class="toast" role="alert">
        <div class="toast-header">
            <i class="fa-solid fa-check-circle text-success me-2" id="toastIcon"></i>
            <strong class="me-auto" id="toastTitle">Bilgi</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
        </div>
        <div class="toast-body" id="toastMessage"></div>
    </div>
</div>

@section Scripts {
<script>
    const roleModal = new bootstrap.Modal(document.getElementById('roleModal'));
    const toast = new bootstrap.Toast(document.getElementById('toast'));

    function showToast(title, message, isSuccess = true) {
        document.getElementById('toastTitle').textContent = title;
        document.getElementById('toastMessage').textContent = message;
        const icon = document.getElementById('toastIcon');
        icon.className = isSuccess ? 'fa-solid fa-check-circle text-success me-2' : 'fa-solid fa-times-circle text-danger me-2';
        toast.show();
    }

    function openRoleModal(userId, username, currentRoles) {
        document.getElementById('roleModalUserId').value = userId;
        document.getElementById('roleModalUsername').textContent = username;
        
        // Tüm checkbox'ları temizle
        document.querySelectorAll('.role-checkbox').forEach(cb => cb.checked = false);
        
        // Mevcut rolleri işaretle
        if (currentRoles) {
            currentRoles.split(',').forEach(role => {
                const cb = document.getElementById('role_' + role.trim());
                if (cb) cb.checked = true;
            });
        }
        
        roleModal.show();
    }

    async function saveRoles() {
        const userId = parseInt(document.getElementById('roleModalUserId').value);
        const roles = [];
        document.querySelectorAll('.role-checkbox:checked').forEach(cb => roles.push(cb.value));
        
        if (roles.length === 0) {
            showToast('Hata', 'En az bir rol seçmelisiniz.', false);
            return;
        }
        
        try {
            const response = await fetch('/User/UpdateUserRoles', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ userId, roles })
            });
            
            const data = await response.json();
            
            if (data.success) {
                roleModal.hide();
                showToast('Başarılı', data.message);
                setTimeout(() => location.reload(), 1000);
            } else {
                showToast('Hata', data.message, false);
            }
        } catch (error) {
            showToast('Hata', 'Bir hata oluştu.', false);
        }
    }

    async function toggleActivation(userId, isActive) {
        const action = isActive ? 'aktifleştirmek' : 'devre dışı bırakmak';
        if (!confirm(`Bu kullanıcıyı ${action} istediğinize emin misiniz?`)) return;
        
        try {
            const response = await fetch('/User/ToggleUserActivation', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ userId, isActive: isActive === 'true' || isActive === true })
            });
            
            const data = await response.json();
            
            if (data.success) {
                showToast('Başarılı', data.message);
                setTimeout(() => location.reload(), 1000);
            } else {
                showToast('Hata', data.message, false);
            }
        } catch (error) {
            showToast('Hata', 'Bir hata oluştu.', false);
        }
    }
</script>
}
