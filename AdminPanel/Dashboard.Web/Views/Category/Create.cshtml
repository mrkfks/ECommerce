@model ECommerce.Application.DTOs.CategoryFormDto

@{
    ViewData["Title"] = "Yeni Kategori Ekle";
}

<div class="mb-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Product" asp-action="Index">Envanter Yönetimi</a></li>
            <li class="breadcrumb-item"><a asp-controller="Category" asp-action="Index">Kategori Yönetimi</a></li>
            <li class="breadcrumb-item active">Yeni Kategori Ekle</li>
        </ol>
    </nav>
</div>

<div class="row mb-4">
    <div class="col-md-6">
        <h2><i class="fa-solid fa-folder-plus me-2"></i> Yeni Kategori Ekle</h2>
        <p class="text-muted">Kategori bilgilerini girin.</p>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left me-2"></i> Listeye Dön
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fa-solid fa-folder me-2"></i> Kategori Bilgileri</h5>
            </div>
            <div class="card-body">
                <form method="post" asp-action="CreateCategory" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label fw-bold" for="categoryName">Kategori Adı <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="Name" id="categoryName" required placeholder="Örn: Elektronik" autocomplete="name" />
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold" for="categoryDescription">Açıklama <span class="text-danger">*</span></label>
                        <textarea class="form-control" name="Description" id="categoryDescription" rows="4" required placeholder="Kategori açıklaması..." autocomplete="off"></textarea>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold" for="categoryImage">Kategori Resimi</label>
                        <input type="file" class="form-control" name="ImageFile" id="categoryImage" accept="image/*" autocomplete="off" />
                        <small class="text-muted">JPG, PNG, GIF formatında resim seçin (Max 5MB)</small>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold" for="categoryOrder">Sıralama</label>
                        <input type="number" class="form-control" name="DisplayOrder" id="categoryOrder" value="0" autocomplete="off" />
                        <small class="text-muted">Kategorilerin gösterim sırası (küçük sayı önce gelir)</small>
                    </div>
                    
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" name="IsActive" checked id="isActive" value="true" autocomplete="on" />
                        <label class="form-check-label fw-bold" for="isActive">
                            Aktif
                        </label>
                    </div>

                    <hr />
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa-solid fa-save me-2"></i> Kategoriyi Kaydet
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fa-solid fa-times me-2"></i> İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card shadow-sm border-0 bg-light">
            <div class="card-body">
                <h6 class="fw-bold mb-3">
                    <i class="fa-solid fa-info-circle me-2"></i> Bilgilendirme
                </h6>
                <p class="small text-muted">
                    <strong>Ana Kategori:</strong> Üst kategori seçmezseniz ana kategori oluşturursunuz.
                </p>
                <p class="small text-muted">
                    <strong>Alt Kategori:</strong> Üst kategori seçerseniz ona bağlı alt kategori oluşturursunuz.
                </p>
                <hr />
                <p class="small text-muted mb-0">
                    <i class="fa-solid fa-lightbulb me-1"></i>
                    Markalar ve özellikler artık ayrı bölümlerden yönetilmektedir.
                </p>
            </div>
        </div>
    </div>
</div>

