@model Dashboard.Web.Models.CategoryViewModel

@{
    ViewData["Title"] = "Yeni Kategori Ekle";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2 class="section-title">Kategori Yönetimi</h2>
        <p class="text-muted">Kategorileri hiyerarşik yapıda oluşturun ve yönetin.</p>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left me-2"></i> Listeye Dön
        </a>
    </div>
</div>

<form id="categoryForm" method="post">
    <input type="hidden" id="categoryData" name="categoryData" />
    
    <!-- Kategori Ağacı -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fa-solid fa-folder-tree me-2"></i> Kategori Hiyerarşisi</h5>
            <button type="button" class="btn btn-light btn-sm" onclick="addRootCategory()">
                <i class="fa-solid fa-plus me-1"></i> Ana Kategori Ekle
            </button>
        </div>
        <div class="card-body p-4">
            <div id="categoryTree">
                <p class="text-muted text-center py-4">Henüz kategori eklenmedi. "Ana Kategori Ekle" butonuna tıklayarak başlayın.</p>
            </div>
        </div>
    </div>

    <!-- Markalar -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fa-solid fa-tag me-2"></i> Markalar (Tüm Kategoriler İçin)</h5>
            <button type="button" class="btn btn-light btn-sm" onclick="addBrand()">
                <i class="fa-solid fa-plus me-1"></i> Marka Ekle
            </button>
        </div>
        <div class="card-body">
            <div id="brandsContainer">
                <p class="text-muted text-center py-3">Henüz marka eklenmedi.</p>
            </div>
        </div>
    </div>

    <!-- Özellikler -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fa-solid fa-sliders me-2"></i> Dinamik Özellikler (Tüm Kategoriler İçin)</h5>
            <button type="button" class="btn btn-light btn-sm" onclick="addAttribute()">
                <i class="fa-solid fa-plus me-1"></i> Özellik Ekle
            </button>
        </div>
        <div class="card-body">
            <div id="attributesContainer">
                <p class="text-muted text-center py-3">Henüz özellik eklenmedi.</p>
            </div>
        </div>
    </div>

    <div class="text-end">
        <button type="submit" class="btn btn-primary btn-lg">
            <i class="fa-solid fa-save me-2"></i> Tüm Kategorileri Kaydet
        </button>
        <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">
            <i class="fa-solid fa-times me-2"></i> İptal
        </a>
    </div>
</form>

@section Scripts {
    <script src="~/js/category-tree.js"></script>
}
