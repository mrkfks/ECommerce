@model ECommerce.Application.DTOs.CategoryDto

@{
    ViewData["Title"] = "Kategori Düzenle";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2 class="section-title">Kategori Düzenle</h2>
        <p class="text-muted">Kategori bilgilerini güncelleyin.</p>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left me-2"></i> Listeye Dön
        </a>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedAt" />
            
            <div class="row g-3">
                <div class="col-md-12">
                    <label asp-for="Name" class="form-label fw-bold">Kategori Adı <span class="text-danger">*</span></label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="col-md-12">
                    <label asp-for="Description" class="form-label fw-bold">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Sıra</label>
                    <input type="number" name="DisplayOrder" class="form-control" value="@Model.DisplayOrder" min="0" />
                </div>

                <div class="col-12">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" asp-for="IsActive" id="isActiveSwitch">
                        <label class="form-check-label fw-bold" for="isActiveSwitch">
                            Kategori Aktif
                        </label>
                    </div>
                </div>

                <!-- Alt Kategoriler Bölümü -->
                <div class="col-12 mt-4">
                    <hr class="my-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="mb-0"><i class="fa-solid fa-sitemap me-2"></i>Alt Kategoriler</h5>
                        <button type="button" class="btn btn-sm btn-success" id="addSubCategoryBtn">
                            <i class="fa-solid fa-plus me-1"></i> Alt Kategori Ekle
                        </button>
                    </div>
                    
                    <div id="subCategoriesContainer" class="border rounded p-3 bg-light">
                        <div id="subCategoriesList">
                            @if (ViewBag.SubCategories != null)
                            {
                                var subCategories = (List<ECommerce.Application.DTOs.CategoryDto>)ViewBag.SubCategories;
                                if (subCategories.Any())
                                {
                                    foreach (var subCat in subCategories)
                                    {
                                        <div class="card mb-2 subcategory-item" data-category-id="@subCat.Id">
                                            <div class="card-body p-3">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <div class="flex-grow-1">
                                                        <strong>@subCat.Name</strong>
                                                        @if (!string.IsNullOrEmpty(subCat.Description))
                                                        {
                                                            <p class="text-muted mb-0 small">@subCat.Description</p>
                                                        }
                                                    </div>
                                                    <div>
                                                        <span class="badge bg-@(subCat.IsActive ? "success" : "secondary")">
                                                            @(subCat.IsActive ? "Aktif" : "Pasif")
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted mb-0" id="noSubCategoriesMsg">Henüz alt kategori bulunmuyor.</p>
                                }
                            }
                            else
                            {
                                <p class="text-muted mb-0" id="noSubCategoriesMsg">Henüz alt kategori bulunmuyor.</p>
                            }
                        </div>
                        
                        <!-- Yeni Alt Kategoriler -->
                        <div id="newSubCategoriesContainer"></div>
                    </div>
                </div>

                <!-- Hidden input for subcategories data -->
                <input type="hidden" id="newSubCategoriesData" name="newSubCategoriesData" value="" />

                <div class="col-12 mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa-solid fa-save me-2"></i> Güncelle
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="fa-solid fa-times me-2"></i> İptal
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        let subCategoryCounter = 0;
        const newSubCategories = [];

        document.getElementById('addSubCategoryBtn').addEventListener('click', function() {
            subCategoryCounter++;
            const subCatId = 'new-' + subCategoryCounter;
            
            // Remove "no subcategories" message if exists
            const noMsg = document.getElementById('noSubCategoriesMsg');
            if (noMsg) noMsg.remove();
            
            const subCatHtml = `
                <div class="card mb-3 border-success" data-subcategory-id="${subCatId}">
                    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                        <span><i class="fa-solid fa-plus-circle me-2"></i>Yeni Alt Kategori</span>
                        <button type="button" class="btn btn-sm btn-outline-light" onclick="removeSubCategory('${subCatId}')">
                            <i class="fa-solid fa-trash"></i>
                        </button>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Kategori Adı <span class="text-danger">*</span></label>
                                <input type="text" class="form-control subcat-name" required />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Görüntüleme Sırası</label>
                                <input type="number" class="form-control subcat-order" value="0" min="0" />
                            </div>
                            <div class="col-md-12">
                                <label class="form-label fw-bold">Açıklama</label>
                                <textarea class="form-control subcat-description" rows="2"></textarea>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check form-switch mt-4">
                                    <input class="form-check-input subcat-active" type="checkbox" checked />
                                    <label class="form-check-label fw-bold">Aktif</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            
            document.getElementById('newSubCategoriesContainer').insertAdjacentHTML('beforeend', subCatHtml);
        });

        function removeSubCategory(id) {
            const element = document.querySelector(`[data-subcategory-id="${id}"]`);
            if (element) {
                element.remove();
            }
            
            // If no new subcategories left, show message if no existing ones
            const existingSubCats = document.querySelectorAll('.subcategory-item');
            const newSubCats = document.querySelectorAll('[data-subcategory-id^="new-"]');
            
            if (existingSubCats.length === 0 && newSubCats.length === 0) {
                document.getElementById('subCategoriesList').innerHTML = '<p class="text-muted mb-0" id="noSubCategoriesMsg">Henüz alt kategori bulunmuyor.</p>';
            }
        }

        // Form submit - collect new subcategories
        document.querySelector('form').addEventListener('submit', function(e) {
            const newSubCategoriesData = [];
            
            document.querySelectorAll('[data-subcategory-id^="new-"]').forEach(subCatEl => {
                const nameInput = subCatEl.querySelector('.subcat-name');
                if (nameInput && nameInput.value.trim()) {
                    newSubCategoriesData.push({
                        Name: nameInput.value.trim(),
                        Description: subCatEl.querySelector('.subcat-description').value.trim(),
                        DisplayOrder: parseInt(subCatEl.querySelector('.subcat-order').value) || 0,
                        IsActive: subCatEl.querySelector('.subcat-active').checked
                    });
                }
            });
            
            document.getElementById('newSubCategoriesData').value = JSON.stringify(newSubCategoriesData);
        });
    </script>
}
