@model List<ECommerce.Application.DTOs.CategoryDto>

@{
    ViewData["Title"] = "Kategoriler";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2 class="section-title">Kategoriler</h2>
        <p class="text-muted">Tüm kategorileri görüntüleyin ve yönetin.</p>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-plus me-2"></i> Yeni Kategori Ekle
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fa-solid fa-check-circle me-2"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>ID</th>
                        <th>Resim</th>
                        <th>Kategori Adı</th>
                        <th>Üst Kategori</th>
                        <th>Açıklama</th>
                        <th>Durum</th>
                        <th>Oluşturulma</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var category in Model)
                        {
                            <tr>
                                <td>@category.Id</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(category.ImageUrl))
                                    {
                                        <img src="@category.ImageUrl" alt="@category.Name" class="rounded" style="width: 50px; height: 50px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="bg-secondary rounded d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                            <i class="fa-solid fa-folder text-white"></i>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <strong>@category.Name</strong>
                                </td>
                                <td>
                                    @if (category.ParentCategoryId.HasValue)
                                    {
                                        var parent = Model.FirstOrDefault(c => c.Id == category.ParentCategoryId.Value);
                                        if (parent != null)
                                        {
                                            <span class="badge bg-info">@parent.Name</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Ana Kategori</span>
                                    }
                                </td>
                                <td>
                                    @if (category.Description.Length > 50)
                                    {
                                        @category.Description.Substring(0, 50)<text>...</text>
                                    }
                                    else
                                    {
                                        @category.Description
                                    }
                                </td>
                                <td>
                                    @if (category.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Pasif</span>
                                    }
                                </td>
                                <td>@category.CreatedAt.ToString("dd.MM.yyyy")</td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-sm btn-info" title="Detaylar">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-warning" title="Düzenle">
                                        <i class="fa-solid fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-danger" title="Sil">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">
                                Henüz kategori eklenmemiş.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
