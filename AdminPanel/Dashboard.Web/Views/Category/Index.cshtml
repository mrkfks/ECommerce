@model List<ECommerce.Application.DTOs.CategoryDto>

@{
    ViewData["Title"] = "Kategori Yönetimi";
    var topCategories = Model?.Where(c => c.ParentCategoryId == null).ToList() ?? new List<ECommerce.Application.DTOs.CategoryDto>();
}

<div class="mb-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Product" asp-action="Index">Ürün Yönetimi</a></li>
            <li class="breadcrumb-item active">Kategori Yönetimi</li>
        </ol>
    </nav>
</div>

<div class="row mb-4">
    <div class="col-md-6">
        <h2><i class="fa-solid fa-folder-tree me-2"></i> Kategori Yönetimi</h2>
        <p class="text-muted">Ana kategorileri ve alt kategorileri yönetin.</p>
    </div>
    <div class="col-md-6 text-end">
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createCategoryModal">
            <i class="fa-solid fa-plus me-2"></i> Yeni Ana Kategori
        </button>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fa-solid fa-check-circle me-2"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fa-solid fa-exclamation-circle me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    @if (topCategories != null && topCategories.Any())
    {
        foreach (var category in topCategories)
        {
            var subCategories = Model?.Where(c => c.ParentCategoryId == category.Id).ToList() ?? new List<ECommerce.Application.DTOs.CategoryDto>();
            
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm border-0 category-card">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fa-solid fa-folder me-2"></i>
                            @category.Name
                        </h5>
                        <div class="btn-group">
                            <button class="btn btn-sm btn-light" onclick="editCategory(@category.Id)" title="Düzenle">
                                <i class="fa-solid fa-edit"></i>
                            </button>
                            <button class="btn btn-sm btn-danger" onclick="deleteCategory(@category.Id)" title="Sil">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <img ecommerce-src="@category.ImageUrl" alt="@category.Name" class="img-fluid rounded mb-3" style="max-height: 150px; width: 100%; object-fit: cover;" />
                        <p class="text-muted small mb-3">@category.Description</p>
                        
                        <div class="mb-3">
                            <span class="badge @(category.IsActive ? "bg-success" : "bg-secondary") me-2">
                                @(category.IsActive ? "Aktif" : "Pasif")
                            </span>
                            <small class="text-muted">@category.CreatedAt.ToString("dd.MM.yyyy")</small>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h6 class="mb-0">
                                <i class="fa-solid fa-folder-open me-1"></i>
                                Alt Kategoriler (@subCategories.Count)
                            </h6>
                            <button class="btn btn-sm btn-outline-primary" onclick="addSubCategory(@category.Id, '@category.Name')">
                                <i class="fa-solid fa-plus"></i>
                            </button>
                        </div>

                        @if (subCategories.Any())
                        {
                            <ul class="list-group list-group-flush">
                                @foreach (var sub in subCategories)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                        <span>
                                            <i class="fa-solid fa-folder text-muted me-2"></i>
                                            @sub.Name
                                        </span>
                                        <div class="btn-group btn-group-sm">
                                            <button class="btn btn-outline-warning btn-sm" onclick="editCategory(@sub.Id)">
                                                <i class="fa-solid fa-edit"></i>
                                            </button>
                                            <button class="btn btn-outline-danger btn-sm" onclick="deleteCategory(@sub.Id)">
                                                <i class="fa-solid fa-trash"></i>
                                            </button>
                                        </div>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted small mb-0">
                                <i class="fa-solid fa-info-circle me-1"></i>
                                Henüz alt kategori eklenmemiş.
                            </p>
                        }
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info">
                <i class="fa-solid fa-info-circle me-2"></i>
                Henüz kategori eklenmemiş. Yeni bir ana kategori eklemek için yukarıdaki butona tıklayın.
            </div>
        </div>
    }
</div>

<!-- Ana Kategori Ekleme Modal -->
<div class="modal fade" id="createCategoryModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="fa-solid fa-folder-plus me-2"></i>
                    Yeni Ana Kategori Ekle
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
                <form method="post" asp-action="CreateCategory" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Kategori Adı <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="Name" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Açıklama <span class="text-danger">*</span></label>
                        <textarea class="form-control" name="Description" rows="3" required></textarea>
                    </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Kategori Resimi</label>
                            <input type="file" class="form-control" name="ImageFile" accept="image/*" />
                            <small class="text-muted d-block mt-1">JPG, PNG, GIF formatında resim seçin</small>
                        </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="IsActive" checked id="isActive" value="true" />
                        <label class="form-check-label" for="isActive">
                            Aktif
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa-solid fa-save me-2"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Alt Kategori Ekleme Modal -->
<div class="modal fade" id="createSubCategoryModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title">
                    <i class="fa-solid fa-folder-plus me-2"></i>
                    Alt Kategori Ekle
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
                <form method="post" asp-action="CreateSubCategory" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="alert alert-info">
                        <strong>Üst Kategori:</strong> <span id="parentCategoryName"></span>
                    </div>
                    <input type="hidden" name="ParentCategoryId" id="parentCategoryId" />
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold">Alt Kategori Adı <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="Name" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Açıklama <span class="text-danger">*</span></label>
                        <textarea class="form-control" name="Description" rows="3" required></textarea>
                    </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Alt Kategori Resimi</label>
                            <input type="file" class="form-control" name="ImageFile" accept="image/*" />
                            <small class="text-muted d-block mt-1">JPG, PNG, GIF formatında resim seçin</small>
                        </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="IsActive" checked id="isActiveSub" value="true" />
                        <label class="form-check-label" for="isActiveSub">
                            Aktif
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-info">
                        <i class="fa-solid fa-save me-2"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .category-card {
        transition: all 0.3s ease;
    }
    .category-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15) !important;
    }
</style>

@section Scripts {
<script>
    function addSubCategory(parentId, parentName) {
        document.getElementById('parentCategoryId').value = parentId;
        document.getElementById('parentCategoryName').textContent = parentName;
        new bootstrap.Modal(document.getElementById('createSubCategoryModal')).show();
    }

    function editCategory(id) {
        // TODO: Edit modal veya sayfası eklenecek
        alert('Kategori düzenleme: ' + id);
    }

    function deleteCategory(id) {
        if (confirm('Bu kategoriyi silmek istediğinizden emin misiniz?')) {
            // TODO: Delete API call
            window.location.href = '@Url.Action("Delete")/' + id;
        }
    }
</script>
}

