@model ECommerce.Application.DTOs.CategoryDto

@{
    ViewData["Title"] = "Kategori Detayları";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2 class="section-title">Kategori Detayları</h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="fa-solid fa-edit me-2"></i> Düzenle
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left me-2"></i> Listeye Dön
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fa-solid fa-folder me-2"></i> Kategori Bilgileri</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">ID:</dt>
                    <dd class="col-sm-9">@Model.Id</dd>

                    <dt class="col-sm-3">Kategori Adı:</dt>
                    <dd class="col-sm-9"><strong>@Model.Name</strong></dd>

                    <dt class="col-sm-3">Açıklama:</dt>
                    <dd class="col-sm-9">@Model.Description</dd>

                    <dt class="col-sm-3">Üst Kategori:</dt>
                    <dd class="col-sm-9">
                        @if (Model.ParentCategoryId.HasValue)
                        {
                            <span class="badge bg-info">ID: @Model.ParentCategoryId</span>
                        }
                        else
                        {
                            <span class="text-muted">Ana Kategori</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Sıra:</dt>
                    <dd class="col-sm-9">@Model.DisplayOrder</dd>

                    <dt class="col-sm-3">Durum:</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Aktif</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Pasif</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Oluşturulma:</dt>
                    <dd class="col-sm-9">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>

                    <dt class="col-sm-3">Güncellenme:</dt>
                    <dd class="col-sm-9">@Model.UpdatedAt.ToString("dd.MM.yyyy HH:mm")</dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0"><i class="fa-solid fa-image me-2"></i> Kategori Görseli</h5>
            </div>
            <div class="card-body text-center">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" style="max-height: 300px;" />
                }
                else
                {
                    <div class="bg-light rounded p-5">
                        <i class="fa-solid fa-folder fa-5x text-muted"></i>
                        <p class="text-muted mt-3">Görsel yok</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
