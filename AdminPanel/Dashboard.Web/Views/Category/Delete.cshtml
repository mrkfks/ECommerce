@model ECommerce.Application.DTOs.CategoryDto

@{
    ViewData["Title"] = "Kategori Sil";
}

<div class="row mb-4">
    <div class="col-md-12">
        <h2 class="section-title text-danger">
            <i class="fa-solid fa-exclamation-triangle me-2"></i> Kategori Sil
        </h2>
        <p class="text-muted">Bu kategoriyi silmek istediğinizden emin misiniz?</p>
    </div>
</div>

<div class="card shadow-sm border-danger">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">Silinecek Kategori</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Kategori Adı:</dt>
            <dd class="col-sm-9"><strong>@Model.Name</strong></dd>

            <dt class="col-sm-3">Açıklama:</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Durum:</dt>
            <dd class="col-sm-9">
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">Aktif</span>
                }
                else
                {
                    <span class="badge bg-danger">Pasif</span>
                }
            </dd>

            <dt class="col-sm-3">Oluşturulma:</dt>
            <dd class="col-sm-9">@(Model.CreatedAt.HasValue ? Model.CreatedAt.Value.ToString("dd.MM.yyyy HH:mm") : "-")</dd>
        </dl>

        <div class="alert alert-warning mt-3">
            <i class="fa-solid fa-exclamation-triangle me-2"></i>
            <strong>Uyarı:</strong> Bu kategoriye bağlı ürünler varsa silme işlemi başarısız olabilir.
        </div>

        <form asp-action="Delete" method="post" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fa-solid fa-trash me-2"></i> Evet, Sil
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="fa-solid fa-times me-2"></i> İptal
            </a>
        </form>
    </div>
</div>
