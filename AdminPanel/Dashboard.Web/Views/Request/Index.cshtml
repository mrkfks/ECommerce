@model List<ECommerce.Application.DTOs.RequestDto>

@{
    ViewData["Title"] = "Talepler";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Şirket Talepleri</h5>
    </div>
    <div class="card-body">
        @if (Model?.Any() == true)
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Şirket ID</th>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th>Durum</th>
                            <th>Oluşturma Tarihi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var request in Model)
                        {
                            <tr>
                                <td>@request.Id</td>
                                <td>@request.CompanyId</td>
                                <td>@request.Title</td>
                                <td>@request.Description</td>
                                <td>
                                    @{
                                        var statusText = request.Status switch
                                        {
                                            0 => "Beklemede",
                                            1 => "Onaylandı",
                                            2 => "Reddedildi",
                                            3 => "İşleniyor",
                                            4 => "Tamamlandı",
                                            _ => "Bilinmiyor"
                                        };
                                        var badgeClass = request.Status switch
                                        {
                                            0 => "badge-warning",
                                            1 => "badge-success",
                                            2 => "badge-danger",
                                            3 => "badge-info",
                                            4 => "badge-secondary",
                                            _ => "badge-secondary"
                                        };
                                    }
                                    <span class="badge @badgeClass">@statusText</span>
                                </td>
                                <td>@(request.CreatedAt.HasValue ? request.CreatedAt.Value.ToString("dd.MM.yyyy HH:mm") : "-")</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@request.Id" class="btn btn-sm btn-info">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>
                                    @if (request.Status == 0)
                                    {
                                        <form asp-action="Approve" asp-route-id="@request.Id" method="post" style="display:inline;">
                                            <button type="submit" class="btn btn-sm btn-success" onclick="return confirm('Talep onaylansın mı?')">
                                                <i class="fa-solid fa-check"></i>
                                            </button>
                                        </form>
                                        <form asp-action="Reject" asp-route-id="@request.Id" method="post" style="display:inline;">
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Talep reddedilsin mi?')">
                                                <i class="fa-solid fa-times"></i>
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                Henüz talep bulunmamaktadır.
            </div>
        }
    </div>
</div>
