@model ECommerce.Application.DTOs.RegisterDto

@{
    ViewData["Title"] = "E-Ticaret Paneli Kurulumu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Inter', sans-serif;
            padding: 40px 20px;
        }
        .register-container {
            width: 100%;
            max-width: 850px;
        }
        .card {
            border: none;
            border-radius: 16px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            background: white;
        }
        .card-header {
            background: #fff;
            color: #333;
            padding: 2rem 2rem 1rem;
            text-align: center;
            border-bottom: 1px solid #f0f0f0;
        }
        .card-header h5 {
            margin: 0;
            font-weight: 700;
            font-size: 1.75rem;
            color: #2d3748;
            letter-spacing: -0.5px;
        }
        .card-header p {
            margin: 0.5rem 0 0 0;
            font-size: 0.95rem;
            color: #718096;
        }
        .card-body {
            padding: 2.5rem;
        }
        .section-title {
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: #a0aec0;
            font-weight: 700;
            margin-bottom: 1.5rem;
            border-bottom: 1px solid #e2e8f0;
            padding-bottom: 0.5rem;
        }
        .form-label {
            font-weight: 500;
            color: #4a5568;
            font-size: 0.9rem;
            margin-bottom: 0.4rem;
        }
        .form-control {
            border: 1px solid #e2e8f0;
            border-radius: 8px;
            padding: 0.75rem 1rem;
            font-size: 0.95rem;
            transition: all 0.2s;
            background-color: #f8fafc;
        }
        .form-control:focus {
            background-color: #fff;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 8px;
            padding: 1rem;
            font-weight: 600;
            font-size: 1rem;
            letter-spacing: 0.5px;
            transition: transform 0.2s;
        }
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
            background: linear-gradient(135deg, #5a6fd6 0%, #603885 100%);
        }
        .form-link {
            text-align: center;
            margin-top: 2rem;
            padding-top: 1.5rem;
            border-top: 1px solid #f0f0f0;
        }
        .form-link a {
            color: #667eea;
            font-weight: 600;
            text-decoration: none;
        }
        .form-link a:hover {
            color: #764ba2;
            text-decoration: underline;
        }
        .input-icon {
            color: #cbd5e0;
            margin-right: 6px;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="card">
            <div class="card-header">
                <h5>E-Ticaret Paneli Kurulumu</h5>
                <p>Şirketiniz ve yönetici hesabınız için bilgileri giriniz</p>
            </div>
            <div class="card-body">
                @if (ViewData.ModelState.Values.Any(v => v.Errors.Any()))
                {
                    <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                        <div class="d-flex">
                            <i class="fa-solid fa-circle-exclamation me-3 mt-1 fs-5"></i>
                            <div>
                                @foreach (var modelState in ViewData.ModelState.Values)
                                {
                                    @foreach (var error in modelState.Errors)
                                    {
                                        <div class="mb-1">@error.ErrorMessage</div>
                                    }
                                }
                            </div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form asp-action="Register" method="post" novalidate>
                    <div class="row g-4">
                        <!-- Sol Kolon: Şirket Bilgileri -->
                        <div class="col-lg-6 border-end-lg pe-lg-4">
                            <h6 class="section-title"><i class="fa-solid fa-building me-2"></i> Şirket Profiliniz</h6>
                            
                            <div class="mb-3">
                                <label asp-for="CompanyName" class="form-label">Şirket Adı</label>
                                <input asp-for="CompanyName" class="form-control" placeholder="Örn: Teknoloji A.Ş." />
                                <span asp-validation-for="CompanyName" class="text-danger small"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="TaxNumber" class="form-label">Vergi No</label>
                                    <input asp-for="TaxNumber" class="form-control" placeholder="Vergi Kimlik No" />
                                    <span asp-validation-for="TaxNumber" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="CompanyPhoneNumber" class="form-label">Telefon</label>
                                    <input asp-for="CompanyPhoneNumber" class="form-control" placeholder="(5XX) XXX XX XX" />
                                    <span asp-validation-for="CompanyPhoneNumber" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="CompanyEmail" class="form-label">Şirket E-posta</label>
                                <input asp-for="CompanyEmail" class="form-control" placeholder="info@sirketiniz.com" />
                                <span asp-validation-for="CompanyEmail" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="CompanyAddress" class="form-label">Adres</label>
                                <textarea asp-for="CompanyAddress" class="form-control" rows="3" placeholder="Şirket merkezi açık adresi"></textarea>
                                <span asp-validation-for="CompanyAddress" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Sağ Kolon: Yönetici Bilgileri -->
                        <div class="col-lg-6 ps-lg-4">
                            <h6 class="section-title"><i class="fa-solid fa-user-shield me-2"></i> Yetkili Yönetici</h6>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="FirstName" class="form-label">Ad</label>
                                    <input asp-for="FirstName" class="form-control" placeholder="Adınız" />
                                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="LastName" class="form-label">Soyad</label>
                                    <input asp-for="LastName" class="form-control" placeholder="Soyadınız" />
                                    <span asp-validation-for="LastName" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Username" class="form-label">Kullanıcı Adı</label>
                                <input asp-for="Username" class="form-control" placeholder="kullanici_adi" />
                                <span asp-validation-for="Username" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Kişisel E-posta</label>
                                <input asp-for="Email" class="form-control" placeholder="ad.soyad@sirketiniz.com" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Password" class="form-label">Şifre</label>
                                    <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" />
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="ConfirmPassword" class="form-label">Şifre Tekrar</label>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="••••••••" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4 pt-2">
                        <button type="submit" class="btn btn-primary w-100 py-3 text-uppercase">
                            <i class="fa-solid fa-rocket me-2"></i> Kurulumu Tamamla ve Kayıt Ol
                        </button>
                    </div>
                </form>

                <div class="form-link">
                    <p class="text-muted">Zaten bir hesabınız var mı? <a asp-action="Login" asp-controller="Auth">Giriş Yapın</a></p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
