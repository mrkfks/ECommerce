@model List<ECommerce.Application.DTOs.OrderDto>

@{
    ViewData["Title"] = "Siparişler";
}

<div class="card">
    <div class="card-header">
        <h5>Sipariş Listesi</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Müşteri</th>
                        @if (User.IsInRole("SuperAdmin"))
                        {
                            <th>Şirket</th>
                        }
                        <th>Tutar</th>
                        <th>Durum</th>
                        <th>Tarih</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.CustomerName</td>
                        @if (User.IsInRole("SuperAdmin"))
                        {
                            <td><span class="badge bg-secondary">@order.CompanyName</span></td>
                        }
                        <td>@order.TotalAmount.ToString("C")</td>
                        <td>@order.Status</td>
                        <td>@order.OrderDate.ToString("dd.MM.yyyy")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-info">Detay</a>
                            @if (User.IsInRole("CompanyAdmin") || User.IsInRole("SuperAdmin"))
                            {
                                <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-sm btn-warning">Durum Güncelle</a>
                            }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
